@model IEnumerable<Product>

@foreach (var item in Model)
{
    var imagepath = item.Images.FirstOrDefault()?.FileName;

    <div class="product">
        <figure class="product-media">
            <a asp-action="details" asp-route-id="@item.Id">
                <img src="~/uploads/images/@imagepath" alt="product" width="280" height="315">
            </a>
            <div class="product-label-group">
                <label class="product-label label-new">new</label>

                <label class="product-label label-sale">25% OFF</label>
            </div>
            <div class="product-action">
                <a href="#" class=" btn-cart" title="Add to cart">
                    <i class="d-icon-bag"></i>
                    <label>
                        Add to cart
                    </label>
                </a>
                <a href="#" class=" btn-wishlist"
                   title="Add to wishlist"><i class="d-icon-heart"></i></a>
                <a asp-controller="shop" asp-action="Details" class="btn-quickview" title="Quick View">
                    <i class="d-icon-search"></i>
                    <label>
                        Quick
                        View
                    </label>
                </a>
            </div>
        </figure>
        <div class="product-details">
            <div class="product-cat">
                <a href="shop-grid-3col.html">@item.Brands.Name</a>
            </div>
            <h3 class="product-name">
                <a asp-action="details" asp-route-id="1">@item.Name</a>
            </h3>
            <div class="product-price">
                <ins class="new-price">$125.99</ins><del class="old-price">$160.99</del>
            </div>
            <div class="ratings-container">
                <div class="ratings-full">
                    <span class="ratings" style="width:60%"></span>
                    <span class="tooltiptext tooltip-top"></span>
                </div>
                <a asp-action="details" asp-route-id="1" class="rating-reviews">( 8 reviews )</a>
            </div>
        </div>
    </div>
}