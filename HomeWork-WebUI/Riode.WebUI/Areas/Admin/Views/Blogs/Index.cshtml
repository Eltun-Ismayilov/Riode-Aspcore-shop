@model IEnumerable<Riode.WebUI.Model.Entity.Blog>

@{
    ViewData["Title"] = "Index";
}





<h1 style="text-align:center">Blogs Index</h1>

<table class="table table-striped" border="1">
    <thead>
        <tr>
           
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">PublishedDate</th>
            <th>

                <a class="btn btn-success" asp-action="Create">Create New</a>

                <a class="btn btn-warning">Blog Count:@ViewBag.Count</a>


            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    <img width="50" height="50" class="img-fluid"  src="~/uploads/images/blog/mask/@item.ImagePati"/>
                </th>
                <td>@item.Title</td>
                <td> @item.PublishedDate</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>


                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
