@model Riode.WebUI.Model.Entity.Blog

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div>
    <h1 style="text-align:center">Blog Details</h1>


    <div class="white_card_body">
        <div class="card-body">
            <div class="form-row">
                <div class="col-4">
                    <div class="input-group mb-3">

                        <img width="200" height="200" class="img-fluid" src="~/uploads/images/blog/mask/@Model.ImagePati" />

                        <div style="margin-top:20px" class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">CreateData</span>
                            <input type="text" disabled class="form-control" aria-label="Sizing example input" value="@Model.CreateData" aria-describedby="inputGroup-sizing-default">
                        </div>

                        <div style="margin-top:20px" class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">PublishedDate</span>
                            <input type="text" disabled class="form-control" aria-label="Sizing example input" value="@Model.PublishedDate" aria-describedby="inputGroup-sizing-default">
                        </div>
                    </div>
                </div>


                <div class="col-8">
                    <div class="form-group col-12">
                        <label asp-for="Title" class="control-label"></label>
                        <p class="form-control">@Model.Title</p>
                    </div>

                    <div class="form-group col-12">
                        <label asp-for="Body" class="control-label"></label>
                        <p class="form-control textarea">

                            @Model.Body.PlainText()

                        </p>
                    </div>

                </div>
            </div>
        </div>

    </div>





    @section addcss{
        <style>
            p.textarea {
                height: unset;
            }
        </style>
    }

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</form>
</div>
