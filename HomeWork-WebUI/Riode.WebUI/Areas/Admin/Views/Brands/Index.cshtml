@model IEnumerable<Riode.WebUI.Model.Entity.Brands>

@{
    ViewData["Title"] = "Index";
}


<h1>Brands Layout</h1>

<table class="table table-striped" border="1">
    <thead>
        <tr>
            <th>Nom</th>
            <th scope="col">Name</th>
            <th scope="col">CreateData</th>
            <th><a class="btn btn-success" asp-action="Create">Create New</a>

                <a class="btn btn-warning">Brands Count=@ViewBag.Count</a>
                 
            
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td> @item.CreateData</td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>


                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }
    </tbody>
</table>
