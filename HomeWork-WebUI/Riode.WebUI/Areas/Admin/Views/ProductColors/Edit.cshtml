@model ColorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="text-align:center">ProductColors Edit</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkuCode" class="control-label"></label>
                <input asp-for="SkuCode" class="form-control" />
                <span asp-validation-for="SkuCode" class="text-danger"></span>
            </div>
        
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>

