@model Riode.WebUI.Model.Entity.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>



<div class="white_card_body">
    <div class="card-body">
        <div class="form-row">
            <div class="col-4">
                <div class="input-group mb-3">

                    <img width="200" height="200" src="~/uploads/images/@Model.Images.FirstOrDefault(i=>i.IsMain==true)?.FileName" />


                </div>
            </div>


            <div class="col-8">
                <div class="form-group col-12">
                    <label asp-for="Name" class="control-label"></label>
                    <p class="form-control">@Model.Name</p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Sku" class="control-label"></label>
                    <p class="form-control textarea">

                        @Model.Sku

                    </p>
                </div>

                <div class="form-group col-12">
                    <label asp-for="Brands" class="control-label"></label>
                    <p class="form-control textarea">

                        @Model.Brands.Name

                    </p>
                </div>
            </div>
        </div>
    </div>

</div>
<div>
    <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>




