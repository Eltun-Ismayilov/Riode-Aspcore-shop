@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Email
                                </th>
                                <th>
                                    UserName
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Activated
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM user in Model)
                            {
                                <tr>
                                    <td style="padding-top:20px">
                                        @user.Email
                                    </td>
                                    <td style="padding-top:20px">
                                        @user.UserName
                                    </td>
                                    <td style="padding-top:20px">
                                        @user.Role
                                    </td>
                                    @if (user.Activated)
                                    {
                                        <td style="padding-top:20px" class="text-success">
                                            Active
                                        </td>
                                    }
                                    else
                                    {
                                        <td style="padding-top:20px" class="text-danger">
                                            Disable
                                        </td>
                                    }
                                <td>
                                    @if (user.Activated)
                                    {
                                        <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-outline-danger">
                                            Disable
                                        </a>

                                    }
                                    else
                                    {
                                        <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-outline-success">
                                            Activated
                                        </a>
                                    }

                                    <a asp-action="ChangRole" asp-route-id="@user.Id" class="btn btn-outline-dark">
                                        Change Role
                                    </a>
                                    <a asp-action="RessetPassword" asp-route-id="@user.Id" class="btn btn-outline-warning">
                                        Reset Password
                                    </a>
                                </td>


                                </tr>

                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
