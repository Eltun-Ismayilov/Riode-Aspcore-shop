@model CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}


<hr />
<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-block">
                    <h4>Cari kategoriyalara redake etmek</h4>
                    <form method="post">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" placeholder="name" />
                                <span asp-validation-for="Name" class="col-form-label"></span>
                            </div>

                        </div>
                      


                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="ParentId"></label>
                            <div class="col-sm-10">
                                <select asp-for="ParentId" asp-items="@ViewBag.ParentId" class="form-control select2">
                                    <option selected disabled>secim</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Description"></label>
                            <div class="col-sm-10">
                                <textarea asp-for="Description" rows="5" cols="5" class="form-control"> </textarea>
                                <span asp-validation-for="Description" class="col-form-label"></span>
                            </div>

                        </div>


                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
                
            
        </div>
    </div>
</div>


<div>
    <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
</div>


@section addcss{

    <link href="~/libs/select2/css/select2.min.css" rel="stylesheet" />
}


@section addjs{

    <script src="~/libs/select2/js/select2.full.js"></script>
<script>
    $(document).ready(function () {

        $('.select2').select2();

    });
</script>
}